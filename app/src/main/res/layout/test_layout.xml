<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:windowTranslucentStatus="true"
    android:windowTranslucentNavigation="true"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/test_name"
        android:layout_width="280dp"
        android:layout_height="49dp"
        android:ems="10"
        android:fontFamily="@font/inter_medium"
        android:gravity="center_vertical"
        android:paddingStart="18dp"
        android:text="Name"
        android:textSize="22sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/del_test"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.818" />

    <ImageButton
        android:id="@+id/test_info"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/icons8_play_90"
        android:text="Выбрать"
        android:textSize='15sp'
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="@+id/test_name"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/del_test"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginEnd="76dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/icons8_delete_96"
        android:text="Выбрать"
        android:textSize='15sp'
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider6"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_name" />

</androidx.constraintlayout.widget.ConstraintLayout>